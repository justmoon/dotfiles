" Lightline: Config
let g:lightline = {
  \ 'colorscheme': 'dracula',
  \ 'active': {
  \   'left': [
  \     [ 'mode', 'paste' ],
  \     [ 'filename', 'vista', 'coc_warnings', 'coc_errors' ],
  \     [ 'git' ]
  \   ],
  \   'right': [
  \     [ 'lineinfo' ],
  \     [ 'fileformat', 'fileencoding', 'filetype' ]
  \   ]
  \ },
  \ 'inactive': {
  \   'left': [
  \     [ 'filename' ]
  \   ],
  \   'right': [
  \     [ 'lineinfo' ]
  \   ]
  \ },
  \ 'component': {
  \   'lineinfo': 'î‚¡ %3l:%-2v(%3p%%)%<',
  \ },
  \ 'component_function': {
  \   'cocstatus': 'coc#status',
  \   'filename': 'LightlineFilename',
  \   'git': 'LightlineGit',
  \   'vista': 'LightlineVista'
  \ },
  \ 'component_expand': {
  \   'coc_warnings': 'LightlineCocWarnings',
  \   'coc_errors': 'LightlineCocErrors'
  \ },
  \ 'component_type': {
  \   'coc_warnings': 'warning',
  \   'coc_errors': 'error'
  \ },
  \ 'separator': { 'left': 'î‚°', 'right': 'î‚²' },
  \ 'subseparator': { 'left': 'î‚±', 'right': 'î‚³' }
  \ }
function! LightlineModified()
  return &ft =~# 'help\|vimfiler' ? '' : &modified ? 'ðŸž¼' : &modifiable ? '' : '-'
endfunction
function! LightlineReadonly()
  return &ft !~? 'help\|vimfiler' && &readonly ? 'î‚¢' : ''
endfunction
function! LightlineFilename()
  return (LightlineReadonly() !=# '' ? LightlineReadonly() . ' ' : '') .
  \ (&ft ==# 'vimfiler' ? vimfiler#get_status_string() :
  \  &ft ==# 'unite' ? unite#get_status_string() :
  \  &ft ==# 'vimshell' ? vimshell#get_status_string() :
  \ expand('%:t') !=# '' ? expand('%:t') : '[No Name]') .
  \ (LightlineModified() !=# '' ? LightlineModified() : '')
endfunction
function! LightlineGit()
	if exists('*FugitiveHead')
		let branch = FugitiveHead()
    let [a,m,r] = GitGutterGetHunkSummary()
		return branch !=# '' ? printf('+%d ~%d -%d', a, m, r) . ' î‚  '.branch : ''
	endif
	return ''
endfunction
function! LightlineVista() abort
  return get(b:, 'vista_nearest_method_or_function', '')
endfunction

function! s:lightline_coc_diagnostic(kind, sign) abort
  let info = get(b:, 'coc_diagnostic_info', 0)
  if empty(info) || get(info, a:kind, 0) == 0
    return ''
  endif
  return printf('%s %d', a:sign, info[a:kind])
endfunction
function! LightlineCocErrors() abort
  return s:lightline_coc_diagnostic('error', 'ðŸž®')
endfunction
" âœ˜
function! LightlineCocWarnings() abort
  return s:lightline_coc_diagnostic('warning', 'â—')
endfunction

